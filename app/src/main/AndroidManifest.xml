<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeeshblogapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/blog_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".WelcomeScreenPackage.WelcomeScreen"
            android:theme="@style/ViewPagerStyle"/>

        <activity
            android:name=".Activities.SplashScreen"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.SecondActivity"/>
        <activity android:name=".Activities.CreateAccountPage" />
        <activity android:name=".Activities.LoginPage" />
        <activity android:name=".Activities.UploadPost" />
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>