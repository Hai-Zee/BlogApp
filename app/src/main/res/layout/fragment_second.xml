<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WelcomeScreenPackage.SecondFrag">

    <ImageView
        android:id="@+id/frag1_rightArrowImageID"
        android:layout_width="116dp"
        android:layout_height="59dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/rightzees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/frag1_leftArrowImageID"
        android:layout_width="116dp"
        android:layout_height="59dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/leftzees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/frag1_imageViewID"
        android:layout_width="282dp"
        android:layout_height="356dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/adventure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="275dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Let's share all the trip's stories with friends..."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FF5A83AC"
        android:textColorHighlight="#FF0EA0EF"
        android:textColorLink="#FF0EA0EF"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/frag1_imageViewID"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/frag1_imageViewID"
        app:layout_constraintTop_toBottomOf="@+id/frag1_imageViewID" />
</androidx.constraintlayout.widget.ConstraintLayout>