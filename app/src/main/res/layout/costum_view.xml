<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageID"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/imageID"
            app:layout_constraintStart_toStartOf="@id/imageID"
            app:layout_constraintEnd_toEndOf="@id/imageID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tripID"
            android:text="trip"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="7dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/tripID"
            app:layout_constraintStart_toStartOf="@id/tripID"
            app:layout_constraintEnd_toEndOf="@id/tripID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/storyID"
            android:text="desc"
            android:textSize="18dp"
            android:textStyle="italic"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>