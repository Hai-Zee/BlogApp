<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SecondActivity">

    <ImageView
        android:id="@+id/secActivityImageID"
        android:layout_width="0dp"
        android:layout_height="257dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/secActivityTripID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Trip"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/secActivityImageID"
        app:layout_constraintStart_toStartOf="@+id/secActivityImageID"
        app:layout_constraintTop_toBottomOf="@+id/secActivityImageID" />

    <TextView
        android:id="@+id/secActivityStoryID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Story"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/secActivityTripID"
        app:layout_constraintStart_toStartOf="@+id/secActivityTripID"
        app:layout_constraintTop_toBottomOf="@+id/secActivityTripID" />
</androidx.constraintlayout.widget.ConstraintLayout>